<div class="container">
    <h1 class="text-center">REGISTER</h1>
    <hr>
    <form action="/api/auth/register" method="post">

        <div>
            <label for="firstName">First Name: </label>
            <input id="firstName" placeholder="put your first name" name="first_name" type="text" required>
        </div>

        <div class="mt-3">
            <label for="lastName">Last Name: </label>
            <input id="lastName" placeholder="put your last name" name="last_name" type="text" required>
        </div>

        <div class="mt-3">
            <label for="email">Email: </label>
            <input id="email" placeholder="put your email" name="email" type="email" required>
        </div>

        <div class="mt-3">
            <label for="Birthday"> Birthday: </label>
            <input id="Birthday" name="age" type="date" required>
        </div>

        <div class="my-3">
            <label for="password">Password: </label>
            <input id="password" placeholder="put your password" name="password" type="password" required>
        </div>
        
        <input class="btn btn-success" type="submit" value="REGISTER"> | <a class="btn btn-primary" href="/"> LOGIN</a>
    </form>
</div>