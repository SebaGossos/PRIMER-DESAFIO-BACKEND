<div class="container">
    <div class="d-flex justify-content-around">
        <div class="mb-4">
            <h1>ADD PRODUCT</h1>
            <hr />
            
            <form id="createForm" enctype="multipart/form-data">
            
                <label for="title">Título:</label>
                <input type="text" id="title" name="title" required><br>

                <label for="description">Descripción:</label>
                <input class="form-control w-50" type="text" id="description" name="description" required><br>

                <label for="price">Precio:</label>
                <input type="number" id="price" name="price" min="0" required><br>

                <label for="code">Código:</label>
                <input type="text" id="code" name="code" required><br>

                <label for="stock">Stock:</label>
                <input type="number" id="stock" name="stock" min="0" required><br>

                <label for="category">Categoría:</label>
                <select id="category" name="category">
                    <option value="Agua">Agua</option>
                    <option value="Jugo">Jugo</option>
                    <option value="Gaseosa">Gaseosa</option>
                </select><br>

                <label for="status">Estado:</label>
                <select id="status" name="status">
                    <option value="true">Verdadero</option>
                    <option value="false">Falso</option>
                </select><br>

                <label for="thumbnail">Imagen:</label>
                <input class="mb-3" type="file" id="thumbnail" name="thumbnail"><br>

            </form>
            
                <button id="createBtn" class="btn btn-success" >Agregar producto</button>

        </div>

        <div class="mb-4">
            <h1>UPDATE PRODUCT BY CODE</h1>
            <hr />
            
            <form id="createForm" enctype="multipart/form-data">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <label for="codeUpdate">Código:</label>
                        <input type="text" id="codeUpdate" name="codeUpdate" required><br>
                    </div>
                    <div id="isCode" class="me-5">
                        NO
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-bookmark-x-fill" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M2 15.5V2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.74.439L8 13.069l-5.26 2.87A.5.5 0 0 1 2 15.5zM6.854 5.146a.5.5 0 1 0-.708.708L7.293 7 6.146 8.146a.5.5 0 1 0 .708.708L8 7.707l1.146 1.147a.5.5 0 1 0 .708-.708L8.707 7l1.147-1.146a.5.5 0 0 0-.708-.708L8 6.293 6.854 5.146z"/>
                        </svg>
                    </div>
                </div>

                <label for="titleUpdate">Título:</label>
                <input type="text" id="titleUpdate" name="titleUpdate" required><br>

                <label for="descriptionUpdate">Descripción:</label>
                <input class="form-control w-50" type="text" id="descriptionUpdate" name="descriptionUpdate" required><br>

                <label for="priceUpdate">Precio:</label>
                <input type="number" id="priceUpdate" name="priceUpdate" min="0" required><br>


                <label for="stockUpdate">Stock:</label>
                <input type="number" id="stockUpdate" name="stockUpdate" min="0" required><br>

                <label for="categoryUpdate">Categoría:</label>
                <select id="categoryUpdate" name="categoryUpdate">
                    <option value="Agua">Agua</option>
                    <option value="Jugo">Jugo</option>
                    <option value="Gaseosa">Gaseosa</option>
                </select><br>

                <label for="statusUpdate">Estado:</label>
                <select id="statusUpdate" name="statusUpdate">
                    <option value="true">Verdadero</option>
                    <option value="false">Falso</option>
                </select><br>

                <label for="thumbnailUpdate">Imagen:</label>
                <input class="mb-3" type="file" id="thumbnailUpdate" name="thumbnailUpdate"><br>

            </form>
            
                <button id="createBtn" class="btn btn-success" >Actualizar producto</button>

        </div>
    </div>

    <table class="table table-striped-columns">
        <thead>
            <tr>
                <th>Remove product</th>
                <th>title</th>
                <th>description</th>
                <th>price</th>
                <th>code</th>
                <th>stock</th>
                <th>category</th>
                <th>thumbnail</th>
                <th>status</th>
                <th>id</th>
            </tr>
        </thead>
        <tbody id="tBody">
            {{#each products}}
                <tr>
                    <td><button onclick="deleteProduct('{{this._id}}')" class="btn btn-outline-danger">Remove</button></td>
                    <td>{{this.title}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.code}}</td>
                    <td>{{this.stock}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.thumbnail}}</td>
                    <td>{{this.status}}</td>
                    <td>{{this._id}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table> <br>
</div>